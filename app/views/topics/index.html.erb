<p id="notice"><%= notice %></p>

<h1>大家來留言啊！</h1>

<table>
  <thead>
    <tr>
      <th>留言標題</th>
      <th>內容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.title %></td>
        <td><%= topic.description %></td>
        <td><%= link_to '詳細內容', topic %></td>
        <td><%= link_to '修改', edit_topic_path(topic) %></td>
        <td><%= link_to '刪除', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '我要留言', new_topic_path %>
